<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <type>vertical_wheel</type>
        <pos>0 0</pos>
        <size>0.2 1</size>
        <logoScale>1.125</logoScale>
        <logoSize>0.225 0.225</logoSize>
        <color>00000000</color>
        <maxLogoCount>5</maxLogoCount>
				<logoRotationOrigin>-7.0 0.5</logoRotationOrigin>
				<logoAlignment>central</logoAlignment>        
      </carousel>

      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_inc/images/background.png</path>
      </image>

      <text name="systemInfo">
         <pos>0.38 0.936</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>000000</color>
         <fontPath>./_inc/fonts/gunship.ttf</fontPath>
	 <fontSize>0.0225</fontSize>
      </text>
   </view>
</feature>

   <view name="system,basic,detailed,video">
      <helpsystem name="help">
         <pos>1.3 0.94</pos>      
         <textColor>777777</textColor>
         <iconColor>77777750</iconColor>
      </helpsystem>
   </view>

   <view name="basic,detailed,video">
      <textlist name="gamelist">
         <pos>0.1875 0.175</pos>
         <size>0.45 0.675</size>
         <selectorColor>1c1c1c00</selectorColor>
         <selectedColor>000000</selectedColor>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>ffffff</secondaryColor>
         <fontPath>./_inc/fonts/gunship.ttf</fontPath>
         <fontSize>0.029</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
         <alignment>center</alignment>
      </textlist>
   </view>

   <view name="basic">
      <image name="logo">
         <origin>0.5 0.5</origin>
         <pos>0.715 0.1614</pos>
         <maxSize>0.44 0.24</maxSize>
      </image>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_inc/images/backgroundbasic.png</path>
      </image>
      <textlist name="gamelist">
         <pos>0.071 0.07</pos>
         <size>0.345 0.82</size>
         <alignment>left</alignment>
      </textlist>
   </view>

   <view name="detailed,video">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_inc/images/backgrounddetail.png</path>
