      <image name="md_marquee">
         <pos>0.84 0.105</pos>
         <origin>0.5 0.5</origin>
         <maxSize>0.14 0.14</maxSize>
      </image>
   </view>

   <view name="video">
      <image name="logo">
         <origin>0.5 0.5</origin>
         <pos>0.1665 0.1355</pos>
         <maxSize>0.44 0.24</maxSize>
      </image>
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <pos>0.502 0.405</pos>
         <maxSize>0.355 0.455</maxSize>
